<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/settings_toolbar"


        ></include>

    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/set_profile_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/profile_image"
        app:civ_border_width="5dp"
        app:civ_border_color="@color/colorPrimary"/>

    <EditText

        android:id="@+id/set_user_name"
        android:layout_width="375dp"
        android:layout_height="52dp"
        android:layout_below="@+id/set_profile_image"
        android:layout_centerInParent="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="15dp"
        android:drawableStart="@drawable/edit_profile"
        android:drawableLeft="@drawable/edit_profile"
        android:hint="username"
        android:inputType="textMultiLine"
        android:padding="6dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        />


    <EditText

        android:id="@+id/set_profile_status"
        android:layout_width="375dp"
        android:layout_height="52dp"
        android:layout_below="@+id/set_user_name"
        android:layout_centerInParent="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="15dp"
        android:drawableStart="@drawable/edit_status"
        android:drawableLeft="@drawable/edit_status"
        android:hint="Hello Buddy !"
        android:inputType="textMultiLine"
        android:padding="6dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        />

    <Button

        android:id="@+id/upadat_settings_button"
        android:layout_width="375dp"
        android:layout_height="52dp"
        android:layout_below="@+id/set_profile_status"
        android:layout_centerInParent="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="15dp"
        android:text="update"
        android:padding="6dp"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="20sp"

        />

    <Button

        android:id="@+id/go_to_maps_button"
        android:layout_width="375dp"
        android:layout_height="52dp"
        android:layout_below="@+id/upadat_settings_button"
        android:layout_centerInParent="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="15dp"
        android:text="Go to Maps"
        android:padding="6dp"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="20sp"

        />


</RelativeLayout>